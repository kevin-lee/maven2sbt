<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>${group.id}</groupId>
  <artifactId>j8plus</artifactId>
  <version>0.0.11</version>
  <packaging>jar</packaging>

  <name>J8Plus</name>
  <url>https://github.com/Kevin-Lee/j8plus</url>

  <properties>
    <group.id>io.kevinlee</group.id>
    <something>blah-blah-blah</something>
    <aaa.bbb>${something}-else</aaa.bbb>
    <bbb.ccc>${aaa.bbb}-bbb-ccc</bbb.ccc>
    <ccc.ddd.eee>${aaa.bbb}-blah-${bbb.ccc}-blah</ccc.ddd.eee>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.version>1.8</java.version>
    <junit.version>4.11</junit.version>
    <exclude-project.group>dont-try-this</exclude-project.group>
    <exclude-project.name>home</exclude-project.name>
    <test0ster1.version>0.0.6</test0ster1.version>
    <some-test-property.version>1.2.3</some-test-property.version>
  </properties>

  <repositories>
    <repository>
      <id>kevin-public-releases</id>
      <name>Kevin's Public Releases</name>
      <url>http://dl.bintray.com/kevinlee/maven</url>
    </repository>
    <repository>
      <id>kevin-public-releases2</id>
      <name>Kevin's Public Releases 2</name>
      <url>http://blah.blah.blah/maven</url>
    </repository>
  </repositories>

  <scm>
    <connection>scm:git:git@kevin-lee-github:Kevin-Lee/j8plus.git</connection>
    <developerConnection>scm:git:git@kevin-lee-github:Kevin-Lee/j8plus.git</developerConnection>
    <url>https://github.com/Kevin-Lee/j8plus</url>
    <tag>HEAD</tag>
  </scm>

  <distributionManagement>
    <repository>
      <id>kevin-public-releases</id>
      <name>Kevin's Public Releases</name>
      <url>https://nexus.kevinlee.io/content/repositories/kevin-public-releases</url>
      <uniqueVersion>true</uniqueVersion>
      <layout>default</layout>
    </repository>
    <snapshotRepository>
      <id>kevin-public-snapshots</id>
      <name>Kevin's Public Snapshots</name>
      <url>https://nexus.kevinlee.io/content/repositories/kevin-public-snapshots</url>
      <uniqueVersion>true</uniqueVersion>
      <layout>default</layout>
    </snapshotRepository>
  </distributionManagement>

  <profiles>
    <profile>
      <id>releases</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-staging-maven-plugin</artifactId>
            <version>1.6.5</version>
            <executions>
              <execution>
                <id>default-deploy</id>
                <phase>deploy</phase>
                <goals>
                  <goal>deploy</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <serverId>kevin-public-releases</serverId>
              <nexusUrl>https://nexus.kevinlee.io/</nexusUrl>
              <skipStaging>true</skipStaging>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <encoding>${project.build.sourceEncoding}</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <releaseProfiles>releases</releaseProfiles>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>not-real-junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${group.id}</groupId>
      <artifactId>not-real-test0ster1</artifactId>
      <version>${test0ster1.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${ group.id }</groupId>
      <artifactId>nothing</artifactId>
      <version>0.0.1</version>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>not-real-assertj-core</artifactId>
      <version>1.5.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>my.group</groupId>
      <artifactId>fake-app</artifactId>
      <version>${some-test-property.version}</version>
    </dependency>
    <dependency>
      <groupId>my.group2</groupId>
      <artifactId>${ something }</artifactId>
      <version>${some-test-property.version}</version>
    </dependency>
    <dependency>
      <groupId>my.group3</groupId>
      <artifactId>${ ccc.ddd.eee }-blah-blah</artifactId>
      <version>${some-test-property.version}</version>
      <exclusions>
        <exclusion>
          <groupId>${bbb.ccc}</groupId>
          <artifactId>${ccc.ddd.eee}-and-something-else</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>some.project</groupId>
      <artifactId>the-project1</artifactId>
      <version>1.9.5</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>another.project</groupId>
          <artifactId>another-project</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>some.project</groupId>
      <artifactId>the-project2</artifactId>
      <version>2.10.1</version>
      <exclusions>
        <exclusion>
          <groupId>blah.blah</groupId>
          <artifactId>abc</artifactId>
        </exclusion>
        <exclusion>
          <groupId>some.test</groupId>
          <artifactId>project-123</artifactId>
        </exclusion>
        <exclusion>
          <groupId>${bbb.ccc}</groupId>
          <artifactId>${ccc.ddd.eee}</artifactId>
        </exclusion>
        <exclusion>
          <groupId>${bbb.ccc}-and-something-else</groupId>
          <artifactId>blah-${ccc.ddd.eee}-blah</artifactId>
        </exclusion>
        <exclusion>
          <groupId>abc-${bbb.ccc}</groupId>
          <artifactId>${ccc.ddd.eee}-def</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>some.project</groupId>
      <artifactId>the-project3</artifactId>
      <version>1.0.9</version>
      <exclusions>
        <exclusion>
          <groupId>blah.blah</groupId>
          <artifactId>abc</artifactId>
        </exclusion>
        <exclusion>
          <groupId>${exclude-project.group}</groupId>
          <artifactId>${exclude-project.name}</artifactId>
        </exclusion>
        <exclusion>
          <groupId>something.else</groupId>
          <artifactId>xyz-999</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

  </dependencies>
</project>